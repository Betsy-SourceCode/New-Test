    <script>
        $(function () {
            var name = getCookie("Language");
            if (name == "zh-CN") {  //中文状态下
                var Language = "Name_CN";
            }
            if (name == "en-US") {  //英文状态下
                Language = "Name_EN";
            }
            if (name == "vi") {   //越南文状态下
                Language = "Name_VN";
            }
            var TopicArea = "";
            $.ajax({
                type: "post",
                async: false,
                dataType: 'JSON',
                url: "/KnowledgeBase/SelectBK",
                data: { "Language": Language },
                success: function (result) {
                    $.each(result.Data.DropDownList, function (key, value) {
                        TopicArea += '<option value="' + value.Value + '"';
                        if ('@ViewBag.AllCustomer.TopicArea'==value.Value) {   //设置默认值
                            TopicArea += "selected='selected'";
                        }
                        TopicArea += ">" + value.Text + '</option > ';
                    })
                    $("#TopicArea").find("select").append(TopicArea);
                    return false;
                }
            });
        })
        //取Cookie的某个参数
        function getCookie(sName) { /*sName为要取的key名*/
            var aCookie = document.cookie.split("; ");
            for (var i = 0; i < aCookie.length; i++) {
                var aCrumb = aCookie[i].split("=");
                if (sName == aCrumb[0])
                    return unescape(aCrumb[1]);
            }
            return null;
        }
    </script>
