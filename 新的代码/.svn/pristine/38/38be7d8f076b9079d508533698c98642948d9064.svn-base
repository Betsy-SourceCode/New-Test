    <script>
        function UpdateKnowledgeBase() {
            var isFK = FeiKong();
            if (!isFK) {
                return;
            };
            var data = new FormData($('#Addform')[0]);
            $.ajax({
                url: '/KnowledgeBaseZSG/AddUpdateFunction?&num=2&QnAID='+@ViewBag.AllCustomer.QnAID,
                type: 'POST',
                dataType: 'json',
                data: data,
                async: false,
                cache: false,
                contentType: false,
                processData: false,
                success: function (result) {
                    if (result.id > 0) {
                        alert("修改成功！");
                        //location.reload(); //测试用
                        window.location.href = "/KnowledgeBase/DetailsKnowledgeBase?QnAID=" + result.Success;   //返回详情页
                    } else {
                        alert("添加失败，发生错误，请联系电脑部！内部成员请查看日志文件！");
                    }
                },
                error: function (data) {
                    debugger;
                }
            });
        }
        //判断文本框非空
        function FeiKong() {
            var Author = $("#Author").val().trim();
            var Question = $("#Question").val().replace(/&nbsp;/g, '').trim();
            var Answer = $("#Answer").val().replace(/&nbsp;/g, '').trim();
            if (Author == "") {
                alert("作者（提出者）不可为空!");
                document.getElementById("Author").focus();
                return false;
            }
            if (RemoveHtml(Question) == "") {
                alert("主题描述不可为空!");
                return false;
            }
            if (RemoveHtml(Answer) == "") {
                alert("处理描述不可为空!");
                return false;
            }
            return true;
        }
        //移除html代码
        function RemoveHtml(htmlStr) {

            if (htmlStr == null || htmlStr == "") {
                return "";
            }
            else {
                var reg1 = /<(?:.|\s)*?>/g;
                var reg2 = /& [^;]/g;
                var text = htmlStr.replace(reg1, ""); //去掉html标签函数
                text = text.replace(reg1, ""); //去掉html标签函数
                text = text.replace(reg2, "");
                if (text.length > 50) {
                    text = text.substring(0, 48) + "...";
                }
                return text;
            }
        }
    </script>
