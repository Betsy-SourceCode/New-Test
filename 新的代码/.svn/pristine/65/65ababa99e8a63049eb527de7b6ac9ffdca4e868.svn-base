
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Scripts/bootstrap-3.3.7.min.css" rel="stylesheet" />
    <link href="~/Scripts/Index.css" rel="stylesheet" />
    <link href="~/Scripts/分页/jquery.sPage.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.9.1.min.js"></script>
    <script src="~/Scripts/bootstrap-3.3.7.min.js"></script>
    <script src="~/Scripts/AngularJS.js"></script>
    <script src="~/Scripts/导出/excellentexport.js"></script>
    <script src="~/Scripts/Index.js"></script>
    <script src="~/Scripts/分页/jquery.sPage.js"></script>
    <script src="~/Scripts/WdatePicker/WdatePicker.js"></script>
</head>
<body style="max-width:96%;min-width:1250px; margin:0px auto" ng-app="myApp" ng-controller="NewEmailDomainPT">
    <div id="mydiv">
        <div id="Title">
            <h1 style="text-align: center;">
                <span>新到的电邮域名管理</span>
            </h1>
        </div>
        <form id="Myform" method="post" class="form-inline" role="form" onsubmit="return false">
            <div class="panel-heading col-sm-3" style="margin-left:5%">
                新域名:<input name="DomainName" type="text" id="DomainName" class="form-control input-content" style="width:75%" />
                <a class="glyphicon glyphicon-remove btn form-control-feedback input-clear-a qq"
                   style="pointer-events: auto;"
                   onclick="$('#DomainName').val('')"></a>
            </div>
            <div class="panel-heading col-sm-3">
                <label style="font-weight:bold">日期:&nbsp;&nbsp;&nbsp;从&nbsp;&nbsp;</label>
                <input id="FindDate" name="FindDate" type="text" class="Wdate form-control" onclick="WdatePicker({maxDate:'#F{$dp.$D(\'End_Date\')}'});" value="@ViewBag.date" style="cursor:pointer;height:34px;text-align:center;background-color:white;width:65%" readonly="readonly" />
            </div>
            <div class="panel-heading col-sm-3" style="margin-left: -3%">
                <label style="font-weight:bold;margin-right:8%">至</label>
                <input id="End_Date" name="EndTime" type="text" class="Wdate form-control"
                       value="@ViewBag.today" onclick="WdatePicker({ minDate: '#F{$dp.$D(\'Start_Date\')}'}); " style="cursor:pointer;height:34px;text-align:center;background-color:white;width:65%" readonly="readonly" title="默认结束日期为当天！" />
            </div>
            <div class="panel-heading col-sm-1" style="margin-left:-5%">
                <input type="button" class="btn btn-primary" value="查询" />
            </div>
        </form>
        @*表格*@
        <table id="GridView" class="table table-bordered table-hover my_table" style="width:98%;margin:5% auto">
            <thead>
                <tr>
                    <th style="width:5%;text-align:center">序号</th>
                    <th style="width:30%;text-align:left">域名</th>
                    <th style="width:9%;text-align:center">发生日期</th>
                    <th style="width:18%;text-align:left">数据类型</th>
                    <th style="width:28%;text-align:left">备注</th>
                    <th style="width:10%;text-align:center">管理功能</th>
                </tr>
            </thead>
            <tbody>
                <tr ng-repeat="i in List track by $index" style="cursor: pointer">
                    <td>{{i.DNSerial}}</td>
                    <td>{{i.DomainName}}</td>
                    <td>{{i.FindDate}}</td>
                    <td>{{i.SourceType}}</td>
                    <td>{{i.Remarks}}</td>
                    <td style="text-align: center">
                        <img src="~/Scripts/修改.png" />
                    </td>
                </tr>
            </tbody>
        </table>
        @*分页*@
        <div style="float:right" id="myPage"></div>
    </div>
</body>
</html>
